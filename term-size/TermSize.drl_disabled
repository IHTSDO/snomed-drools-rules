import org.ihtsdo.drools.domain.Description
import org.ihtsdo.drools.response.InvalidContent

global java.util.List invalidContent

rule "Term double, leading or trailing spaces"
    dialect "mvel"
    when
        d : Description(term.getBytes.size <= 255)
    then
        invalidContent.add(new InvalidContent(d, "The system has detected a contradiction of the following convention: an active description must not be longer than 255 characters."));
end
